<UserControl x:Class="WpfApplication2.screen3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:k="http://schemas.microsoft.com/kinect/2013"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="301">
    <Grid>
        <k:KinectRegion Name="kinectRegion">


            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="15*"></ColumnDefinition>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Width="400" Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Left" >


                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                        <k:KinectTileButton Grid.Column="2" Width="300" Height="150" Click="Button_Click" VerticalAlignment="Top">Go to Screen 3</k:KinectTileButton>

                    </StackPanel>

                </StackPanel>

                <!-- <Button Grid.Column="2" Width="50" Height="50" Click="Button_Click" VerticalAlignment="Top">Rate</Button>-->
            </Grid>

        </k:KinectRegion>
    </Grid>
</UserControl>
